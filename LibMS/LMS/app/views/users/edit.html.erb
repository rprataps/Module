<% provide(:title, 'Edit user') %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.label :first_name %>
      <%= f.text_field :first_name , class: 'form-control' %>

        <%= f.label :middle_name %>
        <%= f.text_field :middle_name, class: 'form-control' %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>

        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: 'form-control' %>

        <%= f.label :address_street %>
        <%= f.text_field :address_street, class: 'form-control' %>

        <%= f.label :address_house %>
        <%= f.text_field :address_house, class: 'form-control' %>

        <%= f.label :address_state %>
        <%= f.text_field :address_state, class: 'form-control' %>



      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
