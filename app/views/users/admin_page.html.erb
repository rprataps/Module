    <%= label_tag(:q, "Search for Users:") %>
    <%= text_field_tag(:q) %>
    <%= check_box_tag(:library_members) %>
    <%= label_tag(:library_members, " Library Members") %>
    <%= check_box_tag(:administrators) %>
    <%= label_tag(:administrators, "Administrators ") %>
    <%= submit_tag("Search") %> <%= submit_tag("List all Users") %>
    <%= submit_tag("Add new user") %>
<% end %>

